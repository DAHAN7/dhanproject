server.port=80
spring.application.name=dahan

# MySQL 데이터베이스 연결 설정
spring.datasource.url=jdbc:mysql://localhost:3306/dahan?useSSL=false&serverTimezone=UTC
spring.datasource.username=root
spring.datasource.password=1234
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Hibernate 관련 설정
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.hibernate.ddl-auto=update # 애플리케이션 시작 시 DB 스키마 자동 업데이트
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true # SQL 포맷팅 활성화

# JDBC 로깅 레벨 설정 (디버깅용)
logging.level.org.springframework.jdbc.datasource=DEBUG
